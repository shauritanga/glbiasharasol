generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime? @map("email_verified")
  image           String?
  role            UserRole  @default(USER)
  club            String?
  password        String?
  business        String?
  district        String
  education_level String?
  institute       String?
  phone           String
  profession      String?
  region          String
  village         String
  ward            String
  accounts        Account[]
  posts           Post[]
  sessions        Session[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Student {
  id           String  @unique @default(cuid())
  name         String
  class        String
  school       String
  talent       String?
  course       String?
  email        String  @unique
  phone        String
  parent_phone String
  business     String?

  @@map("students")
}

model Post {
  id          String   @unique @default(cuid())
  title       String
  description String
  userId      String
  createdAt   DateTime @default(now())
  mediaData   Bytes
  mediaName   String
  mediaType   String
  user        User     @relation(fields: [userId], references: [id])

  @@map("posts")
}

model Club {
  id         String   @unique @default(cuid())
  name       String
  stadiumUrl String
  honors     String[]
  images     String[]
  sponsors   String[]
  players    Player[]

  @@map("clubs")
}

model Player {
  id       String @unique @default(cuid())
  name     String
  number   String
  imageUrl String
  clubId   String
  club     Club   @relation(fields: [clubId], references: [id])

  @@map("players")
}

enum UserRole {
  ADMIN
  USER
}
